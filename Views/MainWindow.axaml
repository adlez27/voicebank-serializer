<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VoicebankSerializer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
		Width="300" Height="200"
        x:Class="VoicebankSerializer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="UTAU Voicebank YAML Serializer">

	<DockPanel>
		<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="20"/>
		<StackPanel Margin="20">
			<Button Command="{Binding Serialize}" Margin="0,0,0,10">Serialize (voicebank to YAML)</Button>
			<Button Command="{Binding Deserialize}">Deserialize (YAML to voicebank)</Button>
		</StackPanel>
	</DockPanel>
	
</Window>
